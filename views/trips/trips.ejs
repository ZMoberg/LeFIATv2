<link rel="stylesheet" href="/stylesheets/trips.css">

<div class="container px-0">

    <div class="landing img-fluid">
        <div class="newsletter__wrapper">
            <div class="d-flex justify-content-between flex-column ">
                <h3 class="flex-fill col text-white">Enter for your chance to win a FREE adventure</h3>
                <form action="#" class="row flex-fill">
                    <div class="col my-md-2 my-2"> <input type="email"
                            class="form-control px-4 border-0 w-100 text-center text-md-left" id="email"
                            placeholder="Your Email" name="email"> </div>
                    <div class="row mx-0 my-md-2 my-2"> <button type="submit" class="btn py-1 w-100">Sign Up
                            Today</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <h1 class="trips_title text-center ">Choose You Adventure</h1>

    <a href="/trips/new" class="btn btn-success">New Trip</a>


    <% locations.forEach(location => { %>
    <a href="/trips/<%= location.slug %>">
        <div class="trips__card card my-5">
            <img src="<%= location.image %>" alt="" class="trips__background  card-img">

            <div class="trip__info">
                <h4 class="card-title"> <%= location.title %> </h4>
                <!-- <div class="card-text mb-2"> <%= location.description %> </div> -->
                <div class="card-text days">
                    <span class="card-text"><%= location.days %> days / </span>
                    <span class="card-text"> <%= location.nights %> nights</span>
                    <span class="card-text text-end"> $ <%= location.price %> </span>
                </div>
            </div>
            <!-- <a href="/trips/<%= location.slug %> " class="btn btn-primary">Read More</a>
                <a href="trips/edit/<%= location.id %> " class="btn btn-info">Edit</a>
                <form action="/trips/<%= location.id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form> -->

        </div>
    </a>
    <% }) %>

</div>