<link rel="stylesheet" href="/stylesheets/gearInput.css">

<div class="shelterForm">

    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" value="<%= product.title %>" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a title.
        </div>
    </div>

    <div class="form-group">
        <div>
            <label for="shelterStyle">Shelter Style</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="shelterStyle" id="shelterStyle1" value="option1">
            <label class="form-check-label" for="shelterStyle1">Classic Enclosed Shelter</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="shelterStyle" id="shelterStyle2" value="option2">
            <label class="form-check-label" for="shelterStyle2">Modular Tarp</label>
        </div>
    </div>

    <div class="form-group">
        <div>
            <label for="sleepCapacity">Sleep Capactiy</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="sleepCapacity" id="sleepCapacity1" value="option1">
            <label class="form-check-label" for="sleepCapacity1">1</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="sleepCapacity" id="sleepCapacity2" value="option2">
            <label class="form-check-label" for="sleepCapacity2">2</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="sleepCapacity" id="sleepCapacity3" value="option3">
            <label class="form-check-label" for="sleepCapacity3">3+</label>
        </div>
    </div>

    <div class="form-group">
        <label for="weight">Shelter Weight</label>
        <div class="input-group">
            <input type="number" min="9" step=".5" name="weight" id="weight" class="form-control col-6"
                value="<%= product.weight %>" required></input>
            <div class="input-group-prepend">
                <div class="input-group-text">Oz's</div>
            </div>
        </div>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a weight.
        </div>
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">$</div>
            </div>
            <input type="number" min="1" step="0.01" name="price" id="price" class="form-control col-6"
                value="<%= product.price %>" required></input>
        </div>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a price.
        </div>
    </div>

    <div class="form-group collapse" id="salePrice">
        <label for="salePrice"> Sale Price</label>
        <input type="number" min="1" step="0.01" name="salePrice" id="salePrice" class="form-control col-6"
            value="<%= product.salePrice %>" required></input>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a sale price.
        </div>
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" class="form-control"
            required><%= product.description %></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a description.
        </div>
    </div>

    <div class="form-group">
        <label for="image">Upload Images</label>
        <input type="file" name="image" id="image" class="form-control-file" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a valid file.
        </div>
    </div>

</div>