<div class="backpackForm ">

    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" value="<%= product.title %>" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a title.
        </div>
    </div>

    <!-- Pack Volume -->

    <div class="form-group">
        <label for="volume">Pack Volume</label>
        <div class="input-group">
            <input type="number" min="10" step=".5" name="volume" id="volume" class="form-control col-2"
                value="default value" required></input>
            <div class="input-group-prepend">
                <div class="input-group-text">L</div>
            </div>
        </div>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a pack volume.
        </div>
    </div>

    <!-- Strap types -->
    <div class="form-group">
        <div>
            <label for="strapStyle">Strap Style</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="strapStyle" id="strapStyle1" value="option1">
            <label class="form-check-label" for="strapStyle1">Standard <span
                    class="text-muted">(J-shaped)</span></label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="strapStyle" id="strapStyle2" value="option2">
            <label class="form-check-label" for="strapStyle2">Vest Style</label>
        </div>
    </div>

    <div class="form-group">
        <label for="packMaterial">Pack Material</label>
        <select id="packMaterial" class="form-control col-6">
            <option selected>Choose...</option>
            <option value="dyneema">Dyneema® Composite Fabric</option>
            <option value="robic">ROBIC®️</option>
            <option value="gridstop">Gridstop</option>
        </select>
    </div>


    <div class="form-group">
        <label for="weight">Pack Weight</label>
        <div class="input-group">
            <input type="number" min="1" step="0.01" name="weight" id="weight" class="form-control col-3"
                value="<%= product.weight %>" required></input>
            <div class="input-group-prepend">
                <div class="input-group-text">Oz's</div>
            </div>
        </div>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a weight.
        </div>
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">$</div>
            </div>
            <input type="number" min="1" step="0.01" name="price" id="price" class="form-control col-3"
                value="<%= product.price %>" required></input>
        </div>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a price.
        </div>
    </div>

    <div class="form-group collapse" id="salePrice">
        <label for="salePrice"> Sale Price</label>
        <input type="number" min="1" step="0.01" name="salePrice" id="salePrice" class="form-control"
            value="<%= product.salePrice %>" required></input>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a sale price.
        </div>
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" class="form-control"
            required><%= product.description %></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a description.
        </div>
    </div>

    <div class="form-group">
        <label for="image">Upload Images</label>
        <input type="file" name="image" id="image" class="form-control-file" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
            Please enter a valid file.
        </div>
    </div>

</div>