<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="form-control" value="<%= trip.title %>">
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control" required><%= trip.description %></textarea>
</div>

<a href="/trips" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>