<div class="form-group">
    <label for="destination">Destination</label>
    <input value="" type="text" name="destination" id="destination" class="form-control" required>
</div>

<div class="form-group">
    <label for="length">Number of Days</label>
    <input value="" type="number" name="length" id="length" class="form-control" required>
</div>

