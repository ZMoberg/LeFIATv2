        <div class="item_wrapper mt-2 col-sm-6 col-md-4 col-lg-3">
            <div class="card-body">
                <div class="row text-center">
                    <div class="">
                        <a href="/gear/<%= product.slug %> ">
                            <img src="<%= product.image %>" alt="" class="img-fluid w-100 mb-4">
                        </a>
                    </div>
                    <div class="">
                        <a href="/gear/<%= product.slug %>" class="text-decoration-none">
                            <p class="mb-1"> <%= product.title %> </p>
                        </a>
                        <div class=" mb-2">
                            $ <%= product.price %>
                        </div>
                    </div>

                </div>
