                    <a href="/gear/edit/<%= product.id %>" class="btn btn-info">Edit</a>
                    <form action="/gear/<%= product.id %>?_method=DELETE " method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div> -->
            </div>
        </div>
        <% }) %>
    </div>
