    <div class="landing img-fluid">
        <div class="newsletter__wrapper">
            <div class="d-flex justify-content-between flex-column ">
                <h3 class="flex-fill col text-white">Sign up for info on the latest sales and releases</h3>
                <form action="#" class="row flex-fill">
                    <div class="col my-md-2 my-2"> <input type="email"
                            class="form-control px-4 border-0 w-100 text-center text-md-left" id="email"
                            placeholder="Your Email" name="email"> </div>
                    <div class="row mx-0 my-md-2 my-2"> <button type="submit" class="btn py-1 w-100">Sign Up For
                            Discounts</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row article_title mx-5">
        <span class="col-1 text-start"><img src="/public/img/down-arrow.png" alt=""></span>
        <h1 class=" text-center col-10">Biggest Sale Items</h1>
        <span class="col-1 text-end"><img src="/public/img/down-arrow.png" alt=""></span>
    </div>


    <a href="/gear/new" class="btn btn-success mx-3">New Item</a>

    <% products.forEach(product =>  { %>
    <div class="blog_article mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <h4 class="card-title"> <%= product.title %> </h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%- product.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text mb-2">
                        <%= product.description %>
                    </div>
                </div>
                <div class="col-6">
                    <img src="<%= product.image %>" alt="" class="img-fluid w-100">
                </div>
            </div>
            <div class="text-center mt-2">
                <a href="/gear/<%= product.slug %>">Read More</a>
                <!-- <a href="/gear/edit/<%= product.id %>" class="btn btn-info">Edit</a>
                    <form action="/gear/<%= product.id %>?_method=DELETE " method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form> -->
            </div>
        </div>
    </div>
    <% }) %>
</div>