<div class="container">
    <div class="col-6">
        <img src="/<%= product.image %>" alt="" class="img-fluid w-100">
    </div>
    <h1 class="mb-2"><%= product.title %> </h1>

    <div class="text-muted mb-2">
        <%- product.createdAt.toLocaleDateString() %>
    </div>
    <div class="text-muted mb-2"><%= product.slug %></div>
    <a href="/gear" class="btn btn-secondary">All Gear</a>
    <a href="/gear/edit/<%= product.id %> " class="btn btn-info">Edit</a>


</div>