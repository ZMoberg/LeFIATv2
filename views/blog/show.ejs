<div class="container">

<!-- change to multiple image slider -->

    <div class=" mb-5">
        <img src="/<%= article.image %>" alt="" class="img-fluid w-100">
    </div>

    <div class="container d-flex justify-content-center">
        <div class="col-10">
            <h1 class="mb-2"><%= article.title %> </h1>
            <div class="mb-2 d-flex"><%= article.author %> - <div class="text-muted mb-2">
                    <%- article.createdAt.toLocaleDateString() %>
                </div>
            </div>
            <a href="/blog/edit/<%= article.id %> " class="btn btn-info">Edit</a>

            <div class="markup mt-5">
                <%- article.sanitizedHtml %>
            </div>

        </div>
    </div>

    <div class="mt-5">
        <div class="text-center">
            <a href="/blog" class="btn btn-secondary">Return To All Articles</a>
        </div>
    </div>
</div>